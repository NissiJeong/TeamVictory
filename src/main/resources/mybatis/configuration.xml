<?xml version="1.0" encoding="UTF-8" ?> 
<!DOCTYPE configuration  
PUBLIC "-//mybatis.org//DTD Config 3.0//EN"  
"http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
	<!-- 매퍼파일에서 dto객체 가져다 쓰려고 별칭 하는것 -->
	<typeAliases>

		<typeAlias alias="TeamDTO" type="team.sports.matching.service.BaseTeamDTO"/>		
		<typeAlias alias="BettingDTO" type="team.sports.matching.service.BettingDTO"/>
		<typeAlias alias="BoardDTO" type="team.sports.matching.service.BoardDTO"/>	

		<typeAlias alias="TeamDTO" type="team.sports.matching.service.BaseTeamDTO"/>
		<typeAlias alias="TeamBoardDTO" type="team.sports.matching.service.TeamBoardDTO"/>		
		<typeAlias alias="BettingDTO" type="team.sports.matching.service.BettingDTO"/>	

	</typeAliases>
	
	
	<!-- 매퍼파일(SQL쿼리 결과와 자바빈 매핑) 정보 설정 -->		
	<mappers>
		<mapper resource="mybatis/Member.xml" />
		<mapper resource="mybatis/Match.xml" />
		<mapper resource="mybatis/Betting.xml" />

		<mapper resource="mybatis/Board.xml" />

		<mapper resource="mybatis/Team.xml" />

	</mappers>
</configuration>
